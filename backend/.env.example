PORT=5000
# Note: Render automatically sets PORT — you don't need to set it there.

# MongoDB Atlas connection string
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/felicity?retryWrites=true&w=majority

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_this
JWT_EXPIRE=7d

# Brevo transactional email API
# Dashboard → SMTP & API → API Keys tab
EMAIL_PROVIDER=brevo
BREVO_API_KEY=your_brevo_api_key

# Sender identity (must be a verified sender in your Brevo account)
EMAIL_FROM=noreply@felicity.fest
FROM_NAME=Felicity Fest

# Frontend origin for CORS — set to your Vercel deployment URL in production
# e.g. https://felicity-event-manager.vercel.app
FRONTEND_URL=http://localhost:3000

# Discord webhook for audit/security alerts (optional — leave as-is to disable)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Cloudinary (for payment proof image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Google reCAPTCHA v2 (leave blank or use placeholder to disable in dev)
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key
RECAPTCHA_SITE_KEY=your_recaptcha_site_key

# Seed script defaults (used by backend/seed.js)
ADMIN_EMAIL=admin@felicity.fest
ADMIN_PASSWORD=Admin@Felicity2024